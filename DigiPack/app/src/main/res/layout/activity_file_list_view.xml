<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FileListViewActivity">

    <Button
        android:id="@+id/openFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="56dp"
        android:background="@color/nau_gold"
        android:text="Download Folder"
        android:textColor="@color/nau_blue" />

    <ListView
        android:id="@+id/json_info"
        android:layout_width="415dp"
        android:layout_height="550dp"
        android:outlineAmbientShadowColor="@color/gray_white"
        android:outlineSpotShadowColor="@color/gray_white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:choiceMode="singleChoice"
        android:listSelector="@color/nau_gold" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/clouds"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>